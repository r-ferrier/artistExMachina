<?xml version="1.0" encoding="utf-8"?><!-- A RecyclerView with some commonly used attributes -->

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gallery_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/elipse"
        android:scrollbars="vertical">


    </androidx.recyclerview.widget.RecyclerView>

    <ImageButton
        android:id="@+id/fab"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button"
        android:onClick="returnHome"
        android:src="@drawable/home_logo"
        app:layout_constraintBottom_toBottomOf="@+id/gallery_recycler_view"
        app:layout_constraintEnd_toEndOf="@+id/gallery_recycler_view"
        app:layout_constraintTop_toTopOf="@+id/gallery_recycler_view"
        app:layout_constraintStart_toStartOf="@+id/gallery_recycler_view"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintVertical_bias="0.86" />



</androidx.constraintlayout.widget.ConstraintLayout>
